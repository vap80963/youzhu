<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/vp_square_portrait"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:src="@mipmap/ic_launcher"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/fg_contacts_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:text="用户名"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/fg_contacts_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:text="5小时前"
                android:textSize="13dp"
                />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        >

        <TextView
            android:id="@+id/fg_contacts_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="发布内容,这一部分的内容显示，可能有高亮文字，可能有网页链接，也可能有标签文字（#新潮流）"
            android:textSize="15dp"
            />
        <ImageView
            android:id="@+id/fg_contacts_img"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:baselineAlignBottom="true"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone"
            android:padding="8dp"
            android:layout_below="@+id/fg_contacts_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/fg_contacts_admire"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/admire_selecteor"/>

            <TextView
                android:id="@+id/fg_contacts_admire_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="1"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fg_contacts_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/comment"/>

            <TextView
                android:id="@+id/fg_contacts_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>